= form_with model: @artist do |f|
  = f.label :name
  = f.text_field :name

  = f.label :permalink
  = f.text_field :permalink
  
  %br/
  = f.label :bio
  = f.text_area :bio

  %br/

  = f.label :avatar_url
  = f.text_area :avatar_url

  %br/

  = f.label :cover_photo_url
  = f.text_area :cover_photo_url

  %br/

  = f.submit
  
  %br/
  = link_to "Back to Artists", artists_path
