.div.main-header Music App

.div.page-title Tracks

%table
   %thread
      %th url
      %th Name
      %th Credits 
      -# %th Available
  
   %tbody
      - @tracks.each do |track|
         %tr
            %td
               = track.url.truncate(150)
            %td
               = track.name
            %td
               = track.credits.truncate(150)
            -# %td
            -#    = track.available
            %td
               = link_to "Edit", edit_track_path(track.id)
               = link_to "Delete", track_path(track.id), method: :delete, data: {confirm: "Are you sure?"}

%br/

.p.main-button=link_to "Add Tracks", new_track_path        

%br/
= link_to "Go to Artists", artists_path

%br/
= link_to "Go to Albums", albums_path

%br/
= link_to "Back to Home", root_path
