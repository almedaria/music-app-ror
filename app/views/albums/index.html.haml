.div.main-header Music App

.div.page-title Albums

%table
   %thread
      %th Name
      %th Released at
      %th Cover Art URL 
      %th Length
      %th Kind
  
   %tbody
      - @albums.each do |album|
         %tr
            %td
               = album.name
            %td
               = album.released_at.year
            %td
               = album.cover_art_url.truncate(150)
            %td
               = album.length.min
            %td
               = album.kind
            %td
               = link_to "Edit", edit_album_path(album.id)
               = link_to "Delete", album_path(album.id), method: :delete, data: {confirm: "Are you sure?"}

%br/
.p.main-button=link_to "Add Album", new_album_path       

%br/
= link_to "Go to Artists", artists_path

%br/
= link_to "Go to Tracks", tracks_path

%br/
= link_to "Back to Home", root_path
